{
  "name": "life-minute-photos",
  "productName": "Life Minute Photos",
  "version": "1.0.0",
  "description": "10,000 photos in one minute",
  "license": "MIT",
  "repository": "egekhter/life-minute",
  "homepage": "https://lifeminute.dev",
  "author": {
    "name": "Eugene Gekhter",
    "email": "egekhter@gmail.com",
    "url": "https://lifeminute.dev"
  },
  "productNameShort": "Life Minute",
  "folderName": "LifeMinute",
  "appId": "photos.life.minute",
  "main": "backend/main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "install-app-deps"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.7.3",
    "chokidar": "^3.6.0",
    "csso": "^5.0.5",
    "dotenv": "^16.4.5",
    "electron-store": "^8.0.1",
    "electron-unhandled": "^3.0.2",
    "express": "^4.19.2",
    "flatted": "^3.3.1",
    "fs-write-stream-atomic": "^1.0.10",
    "gm": "^1.23.1",
    "has-flag": "^5.0.1",
    "lodash": "^4.17.21",
    "loglevel": "^1.8.0",
    "md5": "^2.3.0",
    "moment": "^2.30.1",
    "sass": "^1.77.8",
    "terser": "^5.31.3",
    "write-file-atomic": "^5.0.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.4.0",
    "@electron/rebuild": "^3.6.0",
    "electron": "31.*",
    "electron-builder": "^23.1.0",
    "electron-packager": "^15.1.0"
  },
  "build": {
    "asar": false,
    "appId": "photos.life.minute",
    "artifactName": "${name}-${version}-${arch}.${ext}",
    "files": [
      "backend/electron-settings.json",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "./backend",
        "to": "app/backend",
        "filter": [
          "**/*",
          "!bin/*"
        ]
      },
      {
        "from": "./frontend",
        "to": "app/frontend",
        "filter": [
          "**/*",
          "!js/*.js",
          "!js/data/*",
          "!js/vendor/*",
          "!js/workers/*",
          "!scss/*",
          "!css/*",
          "!css/vendor/*",
          "!.idea/*",
          "!latest/*",
          "!tmp/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "backend/main.js"
    },
    "mac": {
      "extraResources": [
        {
          "from": "backend/bin/mac",
          "to": "app/backend/bin/mac"
        }
      ],
      "entitlements": "backend/bin/mac/entitlements.plist",
      "entitlementsInherit": "backend/bin/mac/entitlements.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    }
  }
}
